
@{
    ViewBag.Title = "Opciones del sistema y configuracion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3 card rounded shadow text-center" style="padding:8px; height:200px;">
        <div class="card-body">
            <h5 class="card-title">Accesos rapidos</h5>
        </div>
        <div class="card-body card-button-full">
            <div>
                <a class="btn btn-outline-primary" style="width:100%;" href="#">Haz clic aqui</a>
            </div>
        </div>
    </div>

    <div class="offset-md-1 col-md">
        <h2 style="margin-bottom:32px;">@ViewBag.Title</h2>
        <div class="card rounded shadow" style="padding:8px; margin-bottom:32px;">
            <div class="card-body">
                <h5 class="card-title">Copia de seguridad</h5>
                <p class="card-text">Realiza una copia segura de los datos e informacion almacenada en la base de datos</p>

                <a class="btn btn-outline-primary full-width" style="margin-bottom: 20px;" href="#">Descargar respaldo</a>


                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form needs-validation", enctype = "multipart/form-data" }))
                {
                    <div class="row">
                        <div class="col-md">
                            <label class="input-label">Subir archivo de respaldo</label>
                            <input type="file" class="form-control" id="" name="" required>
                        </div>
                    </div>
                    <div>
                        <p>
                            Restaura la informacion desde una copia de seguridad, este proceso eliminara los datos ya existentes y
                            seran remplazados por los datos del respaldo
                        </p>
                    </div>

                    <button type="submit" class="btn btn-outline-success full-width">Cargar y Guardar</button>
                }

            </div>

        </div>

        <div class="card rounded shadow" style="padding:8px;">
            <div class="card-body">
                <h5 class="card-title">Agentes de atencion</h5>
                <p class="card-text">Agrega y elimina los agentes de atencion</p>

                <a class="btn btn-outline-primary full-width" style="margin-bottom: 20px;" href="#">Descargar respaldo</a>


                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form needs-validation", enctype = "multipart/form-data" }))
                {
                    <div class="row">
                        <div class="col-md-3">
                            <label class="input-label">Ficha</label>
                            <input type="number" class="form-control" id="" name="" required>
                        </div>
                        <div class="col-md">
                            <label class="input-label">Nombre del agente</label>
                            <input type="text" class="form-control" id="" name="" required>
                        </div>
                        <div class="col-md-3" style="display:flex; align-items:flex-end;">
                            <button type="submit" class="btn btn-outline-success full-width">Agregar</button>
                        </div>
                    </div>

                }

            </div>

        </div>

    </div>

</div>