
@{
    ViewBag.Title = "Iniciar sesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>@ViewBag.Title</h1>
    <div class="row">
        <div class="col-md">
            @using (Html.BeginForm("SubmitLogin", "Identity", FormMethod.Post, new { @class = "form"}))
            {
                <h4>Captura tus credenciales.</h4>
                <hr />

                <div class="row">
                    <div class="col-md">
                        <label>Email o Usuario</label>
                        <input class="form-control" name="Username" type="text" value="" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <label>Contraseña</label>
                        <input class="form-control" name="Password" type="password" value="" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <button type="submit" class="btn btn-primary full-width">Iniciar sesion</button>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-8 text-center">
            <img style="height:400px" src="/Images/admin-login.jpg" />
        </div>
    </div>
</div>
